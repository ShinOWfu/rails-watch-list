<div class="container">
  <div class="row justify-content-center gap-3">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-category col-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "#{bookmark.movie.poster_url}" %>)">
        <div class="card-product">
          <p class="mb-0 text-white"><%= bookmark.movie.title %></p>
        </div>
        <%= link_to bookmark_path(bookmark),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash-can p-4" style="color:white "></i>
        <% end %>
      </div>
    <% end  %>
    <div>
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-primary" %>
      <%= link_to "Back to lists", lists_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>